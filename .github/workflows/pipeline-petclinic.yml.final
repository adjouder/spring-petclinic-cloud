name: Petclinic CI
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set up JDK 11
      uses: actions/setup-java@v2
      with:
        java-version: '11'
        distribution: 'adopt'
        cache: maven
    - name: Build with Maven
      run: mvn -B package --file pom.xml
    - name: print some default env variables
      run: |
        echo "HOME: ${HOME}"
        echo "REPOSITORY_PREFIX: ${REPOSITORY_PREFIX}"
      shell: bash
    - name: Generate docker images
      run : mvn spring-boot:build-image --file pom.xml -X -Pk8s -DREPOSITORY_PREFIX=adjouder
    - name: Login to Docker Hub
      uses: docker/login-action@v2
      with:
        username: adjouder
        password: dckr_pat_fyS9HpLMkVqYuj9BPUEWmDRkORs
    - name: push docker images
      run : ./scripts/pushImages.sh
